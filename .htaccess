RewriteEngine On

# Don't rewrite if request is for a real directory or file
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f

# 1. Remove .php extension
# If the user types /dashboard, look for dashboard.php
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# 2. (Optional) Redirect from pages/admin/ to a shorter path
# This allows you to use: Qtrace-Website/admin-dashboard
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^dashboard$ pages/admin/dashboard.php [NC,L]
RewriteRule ^project-list$ pages/admin/list_project.php [NC,L]
RewriteRule ^project-map$ pages/admin/project_map.php [NC,L]
RewriteRule ^add-project$ pages/admin/add_project.php [NC,L]

RewriteRule ^contractor-list$ pages/admin/list_contractor.php [NC,L]
RewriteRule ^add-contractor$ pages/admin/add_contractor.php [NC,L]
RewriteRule ^view-contractor$ pages/admin/view_contractor.php [NC,L]
RewriteRule ^edit-contractor$ pages/admin/edit_contractor.php [NC,L]

RewriteRule ^history$ pages/admin/history.php [NC,L]
RewriteRule ^articles$ pages/admin/project_articles.php [NC,L]
RewriteRule ^list-article$ pages/admin/list_article.php [NC,L]
RewriteRule ^view-article$ pages/admin/view_article.php [NC,L]
RewriteRule ^edit-article$ pages/admin/edit_article.php [NC,L]
RewriteRule ^project-reports$ pages/admin/project_reports.php [NC,L]
RewriteRule ^add-article$ pages/admin/add_article.php [NC,L]

RewriteRule ^reports$ pages/admin/reports.php [NC,L]

RewriteRule ^add-account$ pages/admin/add_account.php [NC,L]
RewriteRule ^account-list$ pages/admin/list_account.php [NC,L]
RewriteRule ^edit-account$ pages/admin/edit_account.php [NC,L]
RewriteRule ^view-account$ pages/admin/view_account.php [NC,L]

RewriteRule ^login$ pages/admin/login.php [NC,L]
RewriteRule ^logout$ database/controllers/logout.php [NC,L]

RewriteRule ^view-project$ pages/admin/view_project.php [NC,L]

RewriteRule ^audit-list$ pages/admin/list_audit.php [NC,L]



#For Public pages
RewriteRule ^home$ pages/public/home.php [NC,L]

RewriteRule ^map$ pages/public/map.php [NC,L]

RewriteRule ^projects$ pages/public/project.php [NC,L]
RewriteRule ^project-details$ pages/public/projectDetails.php [NC,L]
RewriteRule ^articles$ pages/public/articles.php [NC,L]
RewriteRule ^article$ pages/public/view_article.php [NC,L]


RewriteRule ^contractors$ pages/public/contractor.php [NC,L]
RewriteRule ^contractors-details$ pages/public/contractorDetails.php [NC,L]

RewriteRule ^about$ pages/public/aboutus.php [NC,L]